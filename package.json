{
	"name": "amz-scraper-api",
	"version": "1.5.2",
	"description": "Amazon Brazil scraper API for extracting product information and coupons",
	"main": "dist/api/server.js",
	"scripts": {
		"start": "node --expose-gc --max-old-space-size=400 dist/api/server.js",
		"dev": "ts-node src/api/server.ts",
		"build": "tsc",
		"postinstall": "npx puppeteer browsers install chrome || true",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"semantic-release": "semantic-release"
	},
	"keywords": [
		"amazon",
		"scraper",
		"api",
		"coupon",
		"product",
		"web-scraping",
		"rest-api"
	],
	"author": "Emanuel Ozorio Dias",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/itsManeka/amz-scraper-api.git"
	},
	"bugs": {
		"url": "https://github.com/itsManeka/amz-scraper-api/issues"
	},
	"homepage": "https://github.com/itsManeka/amz-scraper-api#readme",
	"dependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.9.0",
		"@types/pg": "^8.15.6",
		"@types/puppeteer": "^5.4.7",
		"@types/uuid": "^9.0.0",
		"axios": "^1.6.0",
		"cheerio": "^1.0.0-rc.12",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"https-proxy-agent": "^7.0.2",
		"node-cache": "^5.1.2",
		"pg": "^8.16.3",
		"puppeteer": "^22.15.0",
		"typescript": "^5.2.2",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.6",
		"@types/jest": "^29.5.8",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"conventional-changelog-conventionalcommits": "^7.0.2",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"jest": "^29.7.0",
		"prettier": "^3.1.0",
		"semantic-release": "^23.0.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2"
	},
	"engines": {
		"node": ">=20.8.1"
	}
}
